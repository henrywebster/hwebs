---
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import { client } from '../lib/client.ts';

const categories = await client.categories.list();
---
<!-- TODO make section in DB -->
<Layout title="Home | Henry J. Webster">
	<main>
		<section>
		<h1>HWEBS.INFO</h1>
		</section>
		<p>
			Welcome! Thanks for visiting my website!
		</p>
		<ul role="list" class="link-card-grid">
			{
				categories.map((category) => (
			<Section
				title={category.title}
				href={category.title}
			/>))
			}
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
		font-family: serif;
	}

	section {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}

	section img {
		max-width: 100%;
		max-height: 100%;
		height: 3rem;
		border-radius: 0.4rem;
	}

	.link-card-grid {
		display: grid;
		gap: .5rem;
		padding: 0;
	}
</style>
